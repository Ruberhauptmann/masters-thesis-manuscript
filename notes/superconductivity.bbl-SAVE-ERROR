    \entry{micnasSuperconductivityNarrowbandSystems1990}{article}{}
      \name{author}{3}{}{%
        {{hash=87a4b578e022c52433a734f9560dd48a}{%
           family={Micnas},
           familyi={M\bibinitperiod},
           given={R.},
           giveni={R\bibinitperiod}}}%
        {{hash=78c111af7a9d3240a60b8f2e30a5a83d}{%
