 @article{Yang_Li_Lee_Ng_2018, title={Structure of graphene and its disorders: a review}, volume={19}, ISSN={1468-6996}, DOI={10.1080/14686996.2018.1494493}, abstractNote={Monolayer graphene exhibits extraordinary properties owing to the unique, regular arrangement of atoms in it. However, graphene is usually modified for specific applications, which introduces disorder. This article presents details of graphene structure, including sp2 hybridization, critical parameters of the unit cell, formation of σ and π bonds, electronic band structure, edge orientations, and the number and stacking order of graphene layers. We also discuss topics related to the creation and configuration of disorders in graphene, such as corrugations, topological defects, vacancies, adatoms and sp3-defects. The effects of these disorders on the electrical, thermal, chemical and mechanical properties of graphene are analyzed subsequently. Finally, we review previous work on the modulation of structural defects in graphene for specific applications.,}, number={1}, journal={Science and Technology of Advanced Materials}, author={Yang, Gao and Li, Lihua and Lee, Wing Bun and Ng, Man Cheung}, year={2018}, month=aug, pages={613–648} }
